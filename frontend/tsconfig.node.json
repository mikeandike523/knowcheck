{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": ["ESNext","DOM","DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": ".",
  },
  "include": [
    "vite.config.ts",
    "./src/lib/prerenderComponent.tsx",
    "./src/components/SpinnerOverlay.tsx",
    "./src/fwk/**/*.ts",
    "./src/fwk/**/*.tsx"
  ]
}
